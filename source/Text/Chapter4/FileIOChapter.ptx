		<program xml:id="FILE_IO-read-df" label="FILE_IO-read-df" interactive="activecode" language="java" sourcefile="ReadDF.java">
			<input>
	import java.io.*;
	public class ReadDF {
		public String storage;
		public static void main(String args[]) {
			reader = new ReadDF();
    	} 
		public ReadDF() {
			storage = "";
			readTextFile("df1.txt");
		}
		private void readTextFile(String fileName) {
			try {
				BufferedReader inStream  = new BufferedReader (new FileReader(fileName));
				String line = inStream.readLine(); // Read one line
				System.out.println("the first line of the file is: " + line);
				storage = line;
				inStream.close();        // Close the stream
			} catch (FileNotFoundException e) {
				System.out.println("IOERROR: "+ fileName +" NOT found\n");
				e.printStackTrace();
			} catch (IOException e) {
				System.out.println("IOERROR: " + e.getMessage() + "\n");
				e.printStackTrace();
			}
		} // readTextFile
	}
			</input>
